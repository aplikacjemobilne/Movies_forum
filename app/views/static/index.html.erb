<% if logged_in? %>
  <h2>Moje filmy</h2>
  <% current_user.movies.each do |movie| %>
    <h3><%= movie.name %></h3>
    <% movie.topics.each do |topic| %>
      <h4><%= topic.title %> by <%= topic.user.name %></h4>
      <% topic.posts.each do |post| %>
        <p>
          <%= post.body %>
        </p>
        <h6>by <%= post.user.name %></h6>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  Nie jesteś zalogowany.
<% end %>
